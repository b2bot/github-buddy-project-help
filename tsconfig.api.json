{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "api-dist",
    "rootDir": ".",  
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "noEmitOnError": true
  },
  "include": ["api/**/*.ts", "src/lib/**/*.ts"]
}
