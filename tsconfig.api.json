{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "api-dist",
    "rootDir": ".",  
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "noEmitOnError": false,
    "declaration": false,
    "sourceMap": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["api/**/*.ts", "src/lib/supabase.ts"],
  "exclude": ["node_modules", "dist", "api-dist", "src/hooks", "src/components"]
}